{{#if user}}
<h1 class="text-2xl">My Circles</h1>

<ol class="flex flex-col gap-4 py-2">
  {{#if ownedCircles.length}}
  {{#each ownedCircles}}
  <li class="shadow-md p-2">
    <ul>
      <li>Name: {{this.name}} </li>
      <li>Description: {{this.description}}</li>
    </ul>
    <a href="/circles/{{this.id}}">View Circle</a>
  </li>
  {{/each}}
  {{else}}
  <p>You currently own no circle. <a href="/circles/create"
       class="underline">Create One</a> </p>
  {{/if}}

</ol>
{{/if}}

<h1 class="text-2xl">{{title}}</h1>

<ol class="flex flex-col gap-4 py-2">
  {{#each circles}}
  <li class="shadow-md p-2">
    <ul>
      <li>Name: {{this.name}} </li>
      <li>Description: {{this.description}}</li>
      <li>Owner: {{this.ownerUsername}}</li>
    </ul>
    <a href="/circles/{{this.id}}">View Circle</a>
  </li>
  {{/each}}
</ol>