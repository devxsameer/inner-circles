<section class="py-8">
  <div class="wrapper">

    <h1 class="section-heading">My Circles</h1>


    {{#if user}}

    {{#if ownedCircles}}

    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">

      {{#each ownedCircles}}
      {{#> circleCard hideOwner=true}}
      {{/circleCard}}
      {{/each}}

    </div>
    <div class="mt-6 flex justify-end">
      <a href="/circles/create"
         class="btn">Create New Circle</a>
    </div>

    {{else}}


    <p>You currently own no circles.
      <a href="/circles/create"
         class="underline">Create One</a>
    </p>

    {{/if}}

    {{else}}

    <p class="text-center">

      <span class="inline-block text-center px-3 py-1 text-sm font-medium bg-gray-100 text-gray-600 rounded-lg">
        You must Signup to create your own circles.
      </span>
    </p>

    <div class="mt-3 flex gap-3 justify-center">
      <a href="/auth/login"
         class="btn">Login</a>

      <a href="/auth/signup"
         class="btn bg-neutral-50 text-neutral-950 hover:bg-neutral-100">Signup</a>
    </div>

    {{/if}}
  </div>
</section>


<section class="bg-gray-50 border-neutral-200 border-t border-b py-8">
  <div class="wrapper">

    <h1 class="section-heading">{{title}}</h1>

    {{#if circles}}
    <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
      {{#each circles}}
      {{> circleCard}}
      {{/each}}
    </div>
    {{else}}
    <p>No circles found.</p>
    {{/if}}
  </div>
</section>