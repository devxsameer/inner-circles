<h1 class="text-2xl">{{title}}</h1>

{{#if errors}}
{{#if errors.length}}
<ul class="mb-4 text-red-600">

  {{#each errors}}
  <li>{{this.msg}}</li>
  {{/each}}

</ul>
{{/if}}
{{/if}}

<form action=""
      method="POST"
      class="flex flex-col gap-2 items-start">
  <label for="name">
    Name:
    <input type="text"
           name="name"
           id="name"
           class="border p-2 w-full rounded"
           value="{{formData.name}}" />
  </label>
  <label for="description">
    Description:
    <textarea type="text"
              name="description"
              id="description"
              class="border p-2 w-full rounded">{{formData.description}}</textarea>
  </label>
  <button type="submit"
          class="border-2 cursor-pointer">Create</button>
</form>