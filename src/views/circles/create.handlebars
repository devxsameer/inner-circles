<section class="container max-w-xl py-6">

  {{!-- ================================
  PAGE TITLE
  ================================= --}}
  <h1 class="text-3xl font-bold text-rose-600 mb-4">{{title}}</h1>

  {{!-- ================================
  VALIDATION ERRORS
  ================================= --}}
  {{#if errors}}
  {{#if errors.length}}
  <ul class="mb-4 bg-red-50 border border-red-200 text-red-700 p-3 rounded">
    {{#each errors}}
    <li class="mb-1">â€¢ {{msg}}</li>
    {{/each}}
  </ul>
  {{/if}}
  {{/if}}


  {{!-- ================================
  FORM
  ================================= --}}
  <form method="POST"
        action=""
        class="bg-white p-6 rounded-lg shadow-md border space-y-4">

    {{!-- Name Input --}}
    <div>
      <label for="name"
             class="block font-semibold mb-1">
        Circle Name
      </label>
      <input type="text"
             name="name"
             id="name"
             value="{{formData.name}}"
             required
             class="w-full border p-2 rounded focus:outline-none focus:ring-2 focus:ring-rose-400" />
    </div>

    {{!-- Description Input --}}
    <div>
      <label for="description"
             class="block font-semibold mb-1">
        Description
      </label>
      <textarea name="description"
                id="description"
                class="w-full border p-2 h-28 rounded resize-none focus:outline-none focus:ring-2 focus:ring-rose-400">{{formData.description}}</textarea>
    </div>

    {{!-- Submit Button --}}
    <button type="submit"
            class="px-4 py-2 bg-indigo-600 text-white font-semibold rounded hover:bg-indigo-700 transition">
      {{#if formData.id}}
      Update Circle
      {{else}}
      Create Circle
      {{/if}}
    </button>

  </form>

</section>