<section class="max-w-6xl mx-auto px-4 py-16 text-center">
   <h1 class="text-4xl font-extrabold text-gray-900 mb-4">
      Welcome to <span class="text-rose-600">InnerCircles</span>
   </h1>
   <p class="text-gray-600 text-lg max-w-2xl mx-auto">
      Create circles. Share ideas. See the real people behind posts ‚Äî
      only within your circles.
   </p>

   <div class="mt-8 flex justify-center gap-4">
      <a href="/signup"
         class="btn-lg hover:bg-neutral-900">
         Create Account
      </a>
      <a href="/circles"
         class="btn-lg bg-neutral-100 border-neutral-950 text-neutral-950 hover:bg-neutral-200">
         Explore Circles
      </a>
   </div>
</section>

<!-- ================= PUBLIC POSTS FEED ================= -->
<section class="bg-gray-50 py-14 border-t border-b">
   <div class="max-w-6xl mx-auto px-4">
      <h2 class="text-2xl font-bold mb-6">Latest Public Posts</h2>

      <div class="grid md:grid-cols-2 gap-6">
         {{#each publicPosts}}
         <div class="bg-white p-5 rounded-xl shadow-sm border hover:shadow-md transition">
            <h3 class="font-semibold text-lg">
               {{this.title}}
            </h3>

            <p class="text-gray-600 mt-2 line-clamp-2">
               {{this.body}}
            </p>

            <div class="mt-4 flex justify-between text-sm text-gray-500">
               <span>Circle: {{this.circleName}}</span>
               <span>By: Anonymous</span>
            </div>

            <a href="/posts/={{this.id}}"
               class="text-rose-600 mt-3 inline-block hover:underline">
               Read more ‚Üí
            </a>
         </div>
         {{/each}}
      </div>
   </div>
</section>


<!-- ================= POPULAR CIRCLES ================= -->
<section class="max-w-6xl mx-auto px-4 py-14">
   <h2 class="text-2xl font-bold mb-6">Popular Circles</h2>

   <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
      {{#each circles}}
      <div class="bg-white p-5 border rounded-xl shadow-sm hover:shadow-md transition">
         <h3 class="font-semibold text-lg text-indigo-600">
            {{this.name}}
         </h3>
         <p class="text-gray-600 text-sm mt-2">
            {{this.description}}
         </p>

         <div class="flex justify-between items-center mt-4 text-sm text-gray-500">
            <span>Members: {{this.memberCount}}</span>
            <span>Owner: {{this.ownerUsername}}</span>
         </div>

         <a href="/circles/{{this.id}}"
            class="mt-4 inline-block text-indigo-600 hover:underline">
            View Circle ‚Üí
         </a>
      </div>
      {{/each}}
   </div>
</section>

