<h1 class="text-2xl">Log In</h1>

{{#if errors}}
{{#if errors.length}}
<ul class="mb-4 text-red-600">

  {{#each errors}}
  <li>{{this.msg}}</li>
  {{/each}}

</ul>
{{/if}}
{{/if}}

<form action=""
      method="POST"
      class="flex flex-col gap-2 items-start">
  <label for="username">
    Username:
    <input type="text"
           name="username"
           id="username"
           class="border p-2 w-full rounded" />
  </label>
  <label for="password">
    Password:
    <input type="password"
           name="password"
           id="password"
           class="border p-2 w-full rounded" />
  </label>
  <button type="submit"
          class="border-2 cursor-pointer">Log In</button>
</form>
<br />
<a href="/auth/signup"
   class="underline">Sign Up</a>