<section class="py-10">
  <div class="wrapper flex items-center flex-col justify-center">
    <div class="max-w-xs pt-18">

      <h1 class="text-2xl font-semibold">
        <span class="text-3xl block">&#128274;</span>
        Welcome Back
      </h1>

      <p class="text-neutral-500 mb-6 text-sm">
        Log in to continue exploring circles and connecting.
      </p>


      {{#if errors}}
      {{#if errors.length}}
      <ul class="mb-4 text-red-600">

        {{#each errors}}
        <li>{{this.msg}}</li>
        {{/each}}

      </ul>
      {{/if}}
      {{/if}}

      <form action=""
            method="POST"
            class="flex flex-col gap-2">
        <label for="username">
          Username:
          <input type="text"
                 name="username"
                 id="username"
                 class="border p-2 w-full rounded" />
        </label>
        <label for="password">
          Password:
          <input type="password"
                 name="password"
                 id="password"
                 class="border p-2 w-full rounded" />
        </label>
        <button type="submit"
                class="border-2 bg-neutral-950 text-white px-3 rounded-lg cursor-pointer text-sm py-2">Log In</button>
      </form>
    </div>
    <p class="text-neutral-600 text-sm py-12">First time here? <a href="/auth/signup"
         class="text-black font-semibold">Create an account</a></p>
  </div>
</section>