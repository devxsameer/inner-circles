<section class="py-8">
    <div class="wrapper">

        <h1 class="section-heading">My Posts</h1>


        {{#if user}}

        {{#if ownedPosts}}

        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">

            {{#each ownedPosts}}
            {{#> postCard}}
            {{/postCard}}
            {{/each}}

        </div>
        {{#> pagination pagination=ownedPostsPagination query="ownedPostsPage"}}
        {{/pagination}}
        <div class="mt-6 flex justify-end">
            <a href="/posts/create"
               class="btn">Create New Post</a>
        </div>

        {{else}}


        <p>You currently created no posts.
            <a href="/posts/create"
               class="underline">Create One</a>
        </p>

        {{/if}}

        {{else}}

        <p class="text-center">

            <span class="inline-block text-center px-3 py-1 text-sm font-medium bg-gray-100 text-gray-600 rounded-lg">
                You must Signup to create a post.
            </span>
        </p>

        <div class="mt-3 flex gap-3 justify-center">
            <a href="/auth/login"
               class="btn">Login</a>

            <a href="/auth/signup"
               class="btn bg-neutral-50 text-neutral-950 hover:bg-neutral-100">Signup</a>
        </div>

        {{/if}}
    </div>
</section>


<section class="bg-gray-50 border-neutral-200 border-t border-b py-8"
         id="allPosts">
    <div class="wrapper">

        <h1 class="section-heading">{{title}}</h1>

        {{#if allPosts}}
        <div class="grid sm:grid-cols-2 md:grid-cols-3 gap-6">
            {{#each allPosts}}
            {{#> postCard}}
            {{/postCard}}
            {{/each}}
        </div>
        {{#> pagination pagination=allPostsPagination hash="allPosts" query="allPostsPage"}}
        {{/pagination}}
        {{else}}
        <p>No Posts found.</p>
        {{/if}}
    </div>
</section>