<h1 class="text-2xl">{{title}}</h1>

{{#if errors}}
{{#if errors.length}}
<ul class="mb-4 text-red-600">

    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}

</ul>
{{/if}}
{{/if}}

<form action=""
      method="POST"
      class="flex flex-col gap-2 items-start">
    <label for="title">
        Title:
        <input type="text"
               name="title"
               id="title"
               class="border p-2 w-full rounded"
               value="{{formData.title}}" />
    </label>
    <label for="body">
        Body:
        <textarea type="text"
                  name="body"
                  id="body"
                  class="border p-2 w-full rounded">{{formData.body}}</textarea>
    </label>
    <div>
        <label class="block">Circle</label>
        <select name="circleId"
                class="border p-2 w-full rounded">

            {{#each userCircles}}
            <option value="{{id}}"
                    {{isSelected
                    ../formData.genre_id
                    id}}>
                {{name}}
            </option>
            {{/each}}

        </select>
    </div>
    <div>
        <label class="block">Visibility</label>
        <select name="visibility"
                class="border p-2 w-full rounded">
            <option value="public"
                    {{isSelected
                    formData.visibility "public"
                    }}>
                Public</option>
            <option value="members_only"
                    {{isSelected
                    formData.visibility "members_only"
                    }}>Members Only</option>
        </select>
    </div>

    <button type="submit"
            class="border-2 cursor-pointer">Create Post</button>
</form>